<% if current_user.can_follow(user.id) %>

	<%= button_to "Follow", url_for(controller: :follow, action: :follow_toggle, followee_id: user.id), method: :post , remote: true , id: "follow_#{ user.id }" , class: "follow_button" %> 
<% end %>





<% if current_user.can_un_follow(user.id) %>



<%= button_to "UnFollow", url_for(controller: :follow, action: :follow_toggle, followee_id: user.id), method: :post , remote: true, id: "follow_#{ user.id }" , class: "follow_button" %>

<% end %>
